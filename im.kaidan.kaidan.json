{
    "id": "im.kaidan.kaidan",
    "rename-desktop-file": "kaidan.desktop",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QUICK_CONTROLS_STYLE=org.kde.desktop"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qxmpp-project/qxmpp",
                    "tag": "v1.0.0",
                    "commit": "a6d03cfd8a2188254e49828ba766c2ff90971ff5"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/lib/pkgconfig" ]
        },
        {
            "name": "zxing",
            "config-opts": [ "-DBUILD_SHARED_LIBS=ON" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nu-book/zxing-cpp",
                    "commit": "d5f2682719af2e00c9c2d689205ea549b48da391"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories" ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DI18N=1", "-DQUICK_COMPILER=0"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://anongit.kde.org/kaidan",
                    "tag": "v0.4.1",
                    "commit": "da3dd3dfb4bc872070c69eda1a6001fbe6bc3a2c"
                },
                {
                    "type": "patch",
                    "path": "add-oars-rating.patch"
                },
                {
                    "type": "patch",
                    "path": "appstream-add-release.patch"
                }
            ]
        }
    ]
}
