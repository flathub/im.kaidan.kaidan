        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--device=all",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QUICK_CONTROLS_STYLE=org.kde.desktop",
        "--env=LD_LIBRARY_PATH=/usr/lib/"
