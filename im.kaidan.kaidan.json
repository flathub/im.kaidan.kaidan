{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--device=all",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QUICK_CONTROLS_STYLE=org.kde.desktop"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "config-opts": [ "-DBUILD_TESTS=OFF", "-DBUILD_EXAMPLES=OFF" ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qxmpp-project/qxmpp",
                    "tag": "v1.4.0",
                    "commit": "5cf21d869945f6d548805db6d685012cf61e4008"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/lib/pkgconfig" ]
        },
        {
            "name": "zxing",
            "config-opts": [ "-DBUILD_SHARED_LIBS=ON" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nu-book/zxing-cpp",
                    "tag": "v1.1.1",
                    "commit": "29ec2dd4e5c1cfe977530287936acebac1a40f19"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories" ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DI18N=1", "-DQUICK_COMPILER=0"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://invent.kde.org/network/kaidan",
                    "tag": "v0.8.0",
                    "commit": "e8c0fc7e83ecd8b8187f150668d659562bcbddc4"
                }
            ]
        }
    ]
}
