            ]
        },
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "8ebbfdce39efbbb63679badc3320fe06eb3aa68a4da5f50740197645c985ad0f",
                    "url": "https://download.kde.org/stable/kquickimageeditor/kquickimageeditor-0.5.0.tar.xz",
