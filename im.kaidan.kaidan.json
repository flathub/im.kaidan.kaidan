{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--env=LD_LIBRARY_PATH=/usr/lib/",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications"
    ],
    "separate-locales": false,
    "modules": [
        {
            "name": "libomemo-c",
            "buildsystem": "cmake-ninja",
