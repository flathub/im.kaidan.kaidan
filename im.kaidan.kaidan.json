{
    "id": "im.kaidan.kaidan",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "separate-locales": false,
    "finish-args": [
        "--device=all",
        "--device=dri",
        "--env=LD_LIBRARY_PATH=/usr/lib/",
        "--filesystem=home",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/mkspecs",
        "/share/doc",
        "/share/qlogging-categories6",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "kdsingleapplication",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DKDSingleApplication_QT6=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSingleApplication/archive/refs/tags/v1.2.0.tar.gz",
                    "sha256": "ff4ae6a4620beed1cdb3e6a9b78a17d7d1dae7139c3d4746d4856b7547d42c38",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 370439,
                        "stable-only": true,
                        "url-template": "https://github.com/KDAB/KDSingleApplication/archive/refs/tags/v$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "kquickimageeditor",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/kquickimageeditor/kquickimageeditor-0.6.0.tar.xz",
                    "sha256": "11ed4ce1c164a8b6d50bbc1548b5849ab75d5fb837619b90f2cea51ed122547a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 229033,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/kquickimageeditor/kquickimageeditor-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "ffmpegthumbs",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DQT_MAJOR_VERSION=6"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.2/src/ffmpegthumbs-25.12.2.tar.xz",
                    "sha256": "18059809baa8d2525b20988f9176d010ae8758703917c6cafd8199be965bc446",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/ffmpegthumbs-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "qtkeychain",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/frankosterfeld/qtkeychain/archive/0.15.0.tar.gz",
                    "sha256": "f4254dc8f0933b06d90672d683eab08ef770acd8336e44dfa030ce041dc2ca22",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 381807,
                        "stable-only": true,
                        "url-template": "https://github.com/frankosterfeld/qtkeychain/archive/$version.tar.gz"
                    }
                }
            ],
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=/app/lib",
                "-DLIB_INSTALL_DIR=/app/lib",
                "-DBUILD_TRANSLATIONS=NO",
                "-DBUILD_WITH_QT6=ON"
            ]
        },
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=OFF",
                "-DBUILD_EXAMPLES=OFF",
                "-DBUILD_OMEMO=ON",
                "-DWITH_GSTREAMER=ON"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/unstable/qxmpp/qxmpp-1.14.0.tar.xz",
                    "sha256": "9a3c768217cea8d1da88440e8a8de5143aefbf5277cd035a85aca50e418e70c4",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 4149,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/unstable/qxmpp/qxmpp-$version.tar.xz"
                    }
                }
            ],
            "modules": [
                {
                    "name": "libomemo-c",
                    "buildsystem": "cmake-ninja",
                    "config-opts": [
                        "-DBUILD_SHARED_LIBS=ON",
                        "-DCMAKE_POLICY_VERSION_MINIMUM=3.5"
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://github.com/dino/libomemo-c/archive/refs/tags/v0.5.1.tar.gz",
                            "sha256": "d1b65dbf7bccc67523abfd5e429707f540b2532932d128b2982f0246be2b22a0",
                            "x-checker-data": {
                                "type": "anitya",
                                "project-id": 359676,
                                "stable-only": true,
                                "url-template": "https://github.com/dino/libomemo-c/archive/refs/tags/v$version.tar.gz"
                            }
                        }
                    ],
                    "modules": [
                        {
                            "name": "libprotobuf-c",
                            "buildsystem": "autotools",
                            "config-opts": [
                                "--disable-protoc"
                            ],
                            "sources": [
                                {
                                    "type": "archive",
                                    "url": "https://github.com/protobuf-c/protobuf-c/archive/refs/tags/v1.5.2.tar.gz",
                                    "sha256": "cea46eeaa19c52924938b582c5d128a6ed3b6fb5b3f4677476a1781cc06e03f3",
                                    "x-checker-data": {
                                        "type": "anitya",
                                        "project-id": 3716,
                                        "stable-only": true,
                                        "url-template": "https://github.com/protobuf-c/protobuf-c/archive/refs/tags/v$version.tar.gz"
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "qml6glsink",
            "buildsystem": "meson",
            "no-make-install": true,
            "post-install": [
                "install -Dt /app/lib/gstreamer-1.0/ ext/qt6/libgstqml6.so"
            ],
            "config-opts": [
                "-Dqt6=enabled",
                "-Dqt-egl=enabled",
                "-Dqt-wayland=enabled",
                "-Dqt-x11=enabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gstreamer.freedesktop.org/src/gst-plugins-good/gst-plugins-good-1.26.10.tar.xz",
                    "sha256": "7beacb5daba3c6751ebc1c85017d9b1d6de64e24798125932c73c8b1dbeb3bc9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 21852,
                        "stable-only": true,
                        "versions": {
                            "==": "1.26.10"
                        },
                        "url-template": "https://gstreamer.freedesktop.org/src/gst-plugins-good/gst-plugins-good-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/unstable/kaidan/0.15.0/kaidan-0.15.0.tar.xz",
                    "sha256": "cdc2d6afa8f8ed4572e2421224219cfc7fdfab6da4fb77eb4ff099285da4e485",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 361480,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/unstable/kaidan/$version/kaidan-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
