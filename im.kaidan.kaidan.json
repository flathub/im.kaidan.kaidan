{
    "id": "im.kaidan.kaidan",
    "rename-desktop-file": "kaidan.desktop",
    "rename-icon": "kaidan",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "command": "kaidan",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--device=all",
        "--talk-name=org.freedesktop.Notifications",
        "--env=QT_QUICK_CONTROLS_STYLE=org.kde.desktop"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "qxmpp",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/qxmpp-project/qxmpp",
                    "tag": "v1.3.1",
                    "commit": "f4914c60336082942a23a5edfbc52488695d818b"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/lib/pkgconfig" ]
        },
        {
            "name": "zxing",
            "config-opts": [ "-DBUILD_SHARED_LIBS=ON" ],
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nu-book/zxing-cpp",
                    "tag": "v1.1.0",
                    "commit": "2b48016529717786a38b8220e6d7b18f107277a2"
                }
            ],
            "cleanup": [ "/include", "/lib/cmake", "/mkspecs", "/etc/xdg/*categories" ]
        },
        {
            "name": "gst-plugins-bad",
            "buildsystem": "meson",
            "builddir": true,
            "config-opts": [
                "-Dflite=disabled"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gstreamer.freedesktop.org/src/gst-plugins-bad/gst-plugins-bad-1.17.2.tar.xz",
                    "sha256": "fadbf229dbb29cae15ecb1858382aee60f2fa82067673598791c5fdfc52ad2cc"
                }
            ],
            "cleanup": [
                "/include",
                "/lib/*.la",
                "/lib/gstreamer-1.0/*.la",
                "/lib/gstreamer-1.0/include",
                "/lib/pkgconfig",
                "/share/gtk-doc"
            ]
        },
        {
            "name": "kaidan",
            "buildsystem": "cmake-ninja",
            "config-opts": ["-DI18N=1", "-DQUICK_COMPILER=0"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://anongit.kde.org/kaidan",
                    "tag": "v0.6.0"
                }
            ]
        }
    ]
}
